{% if rows_found %} {#En caso de no haber registros encontrados no mostrar la grilla#}

<!-- OJO, este div es la alerta general de advertencia de que se borrara un registro,
tal vez deberiamos mandar este div a una plantilla para reusarla, por otro lado,
deberiamos re ubicar el div para que se vea oculto, actualmente se alcanza a ver en la vista -->
<div id="dialog-confirm-to-delete-one-record" title="Desea borrar el registro?">
  <p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>El registro se borrara permanentemente. Esta seguro?</p>
</div>
<!-- Fin div de la alerta de borrado de un registro -->

<table id="records_list" class="table table-striped responsive-utilities jambo_table">
    <thead>
        <tr class="headings">
            {#Renderizamos las columnas que queremos mostrar en la grilla#}
            {% for col in cols %}
                <th>{{ col }}</th>
            {% endfor %}

            <th>Acci&oacute;n</th>

        </tr>
    </thead>

    <tbody>
        {#Renderizamos los registros encontrados en la grilla, aqui las filas#}
        {% for row in rows_found %}
            <tr class="even pointer">
                {#Renderizamos los registros encontrados en la grilla, aqui las columnas#}
                {% for col in row %}
                    <td class=" ">{{ col }}</td>
                {% endfor %}    

                <td class=" ">
                    
                    <!-- Split button -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-danger">Acci&oacute;n</button>
                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <!--Importante usar los atributos data-xxx para que jquery los lea
                            en diferentes logicas -->
                            <li><a data-event="deleteThisRecord" data-msg="¿Desea eliminar el registro {{row.0}}?" data-href="{{ path('qualisoft_admin_user_purge', { 'id_value': row.0}) }}">Purgar</a>
                            </li>
                            <li><a href="#">Editar</a>
                            </li>
                            <!--
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a>
                            </li>
                            //-->
                        </ul>
                    </div>
                    
                </td>

            </tr>
        {% endfor %}

    </tbody>

</table>
{#Aqui el footer informaltivo de la grilla#}
<div class="dataTables_info" id="example_info">{{ rows_found|length }} de {{ total }} registros en {{ pages_total }} páginas</div>
<div class="dataTables_paginate paging_full_numbers" id="example_paginate">
    <span>
        {#Renderizamos el paginador de la grilla#}
        {#{% for i in 1..pages_total %}
            <a tabindex="0" class="paginate_{% if current_page == i %}{{'active'}}{% else %}{{'button'}} {% endif %}" href="{{ path('qualisoft_admin_user_general', { 'offset': (i - 1) * page_records }) }}">{{ i }}</a> 
        {% endfor %} #} 

        {% for page in pagination %}
            {% if page.page_number matches '/^\\d+$/' %}
            <a tabindex="0" class="paginate_{% if current_page == page.page_number %}{{'active'}}{% else %}{{'button'}} {% endif %}" href="{{ path(page.path, { 'offset': page.offset, 'row_count': page.row_count}) }}">{{ page.page_number }}</a> 
            {% else %}
            <a tabindex="0" class="paginate_button">{{ page.page_number }}</a> 
            {% endif %}
        {% endfor %}    

    </span>
</div>

{% endif %}